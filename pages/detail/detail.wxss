/* detail.wxss css file */
.scroll{
    width:100%;
    height:100%;
    display:flex;
    flex-direction:column;
}
.detail-body{
    display:flex;
    margin:10rpx 20rpx 20rpx 40rpx;
}
.poster{
    width:240rpx;
    height:320rpx;
    margin-right:20rpx;
}
.body-info{
    flex:1;
}
.body-info .title,.body-info .info{
    display:block;
}
.body-info .title{
    font-size:42rpx;
}
.body-info .info{
    font-size:26rpx;
    color:#888;
    margin-top:20rpx;
}
.summary{
    flex:1;
    margin:40rpx 20rpx;
}
.summary .label{
    font-size:32rpx;
    margin-bottom:20rpx;
}
.summary .summary-content{
    font-size:24rpx;
}