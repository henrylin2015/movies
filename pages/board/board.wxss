/* board.wxss css file */

.section{
    height:100%;
    width:100%;
    display:flex;
    flex-direction:column;
}
.head{
    height:400rpx;
}
.carousel,.carousel-item,.carousel-item image{
    height:100%;
    width:100%;
}
.header{
    padding:40rpx 80rpx 20rpx;
}
.title,subtitle{
    display:block;
}
.title{
    font-size:50rpx;
}
.subtitle{
    font-size:28rpx;
    color:#888;
}
.body{
    flex:1;
}
.board-list{
    display:flex;
    flex-direction:column;
    margin-left:20rpx;
    margin-right:20rpx;
}
.board-list-item{
    display:flex;
    background-color:#fbf9fe;
    padding:40rpx 40rpx;
    margin-top:20rpx;
}
.board-list-item  text{
    flex:1;
}
.board-list-item image{
    height:40rpx;
    width:40rpx;
}