/* list.wxss css file */
.page-header{
    display:flex;
    justify-content:center;
    border-bottom:1rpx solid #ccc;
}
.page-header-text{
    padding:30rpx 0;
    color:#999;
    font-size:38rpx;
}
.page-body{
    display:block;
}
.page-body-list{
    display:flex;
    flex-direction:column;
}
.page-body-list-item{
    display:flex;
    flex:1;
    padding:20rpx 20rpx 20rpx 40rpx;
    border-bottom:1px solid #ccc;
}
.page-body-list-item-image{
    width:65px;
    height:100px;
}
.page-body-list-item-content{
    display:flex;
    flex:1;
    flex-direction:column;
    margin-left:20rpx;
}
.page-body-list-item-content text{
    display:block;
}
.page-body-list-item .rating{
    font-size:28rpx;
    color:#f74c31;
    font-weight:bold;
}
.content-title{
    font-size:40rpx;
}
.content-subtitle{
    font-size:22rpx;
    color:#c0c0c0;
}
.artists{
    font-size:26rpx;
    color:#999;
}